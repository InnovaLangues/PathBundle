<a id="templates-sidebar-close" href="#" class="btn btn-default btn-xs pull-right">
    <span class="fa fa-times"></span>
    {{ 'templates_sidebar_close'|trans({}, 'path_editor') }}
</a>

<h2>
    <span class="fa fa-download"></span> {{ 'templates'|trans({}, 'path_editor') }}
</h2>

<table class="table table-condensed table-hover">
    <tr ng-repeat="template in templates">
        <td ng-bind="template.name"></td>
        <td class="text-right">
            <div class="btn-group">
                <button class="btn btn-xs btn-default" ng-click="copy(template.structure, true)">
                    <span class="fa fa-files-o"></span>
                    <span class="sr-only">{{ 'template_copy'|trans({}, 'path_editor') }}</span>
                </button>

                <button class="btn btn-xs btn-default" ng-click="edit(template)">
                    <span class="fa fa-pencil"></span>
                    <span class="sr-only">{{ 'template_edit'|trans({}, 'path_editor') }}</span>
                </button>

                <button class="btn btn-xs btn-danger" ng-click="remove(template)">
                    <span class="fa fa-trash-o"></span>
                    <span class="sr-only">{{ 'template_delete'|trans({}, 'path_editor') }}</span>
                </button>
            </div>
        </td>
    </tr>
</table>